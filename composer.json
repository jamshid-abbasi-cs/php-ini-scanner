{
    "name": "yousha/php-ini-scanner",
    "description": "A lightweight CLI tool to audit php.ini configurations against development and production standards.",
    "license": "GPL-3.0-only",
    "type": "project",
    "keywords": [
        "php",
        "php.ini",
        "config",
        "linter",
        "production",
        "development",
        "security-linter",
        "security-audit",
        "security-best-practices"
    ],
    "authors": [
        {
            "name": "Yousha Aleayoub",
            "email": "yousha.a@hotmail.com",
            "homepage": "https://yousha.blog.ir/",
            "role": "Maintainer, Developer"
        }
    ],
    "homepage": "https://github.com/yousha/php-ini-scanner",
    "support": {
        "email": "yousha.a@hotmail.com",
        "issues": "https://github.com/yousha/php-ini-scanner/issues",
        "source": "https://github.com/yousha/php-ini-scanner"
    },
    "require": {
        "php": "7.4.* || 8.*",
        "symfony/console": "5.*"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "2.*",
        "friendsofphp/php-cs-fixer": "3.*",
        "icanhazstring/composer-unused": "0.*",
        "overtrue/phplint": "3.*",
        "phpunit/phpunit": "9.*",
        "rector/rector": "2.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Yousha\\PhpIniScanner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yousha\\PhpIniScanner\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/php-ini-scanner"
    ],
    "archive": {
        "exclude": [
            "*.log",
            "*.cache",
            "composer.lock"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer-unused/composer-unused-plugin": true,
            "ergebnis/composer-normalize": true
        },
        "archive-format": "zip",
        "bin-compat": "full",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 300,
        "sort-packages": false,
        "vendor-dir": "vendor"
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "format-check": "php-cs-fixer check",
        "lint": "phplint",
        "refactor": "rector process",
        "refactor-check": "rector --dry-run",
        "reformat": "php-cs-fixer fix",
        "test": "phpunit --configuration phpunit.xml"
    },
    "scripts-descriptions": {
        "format-check": "Check coding style issues.",
        "lint": "Check PHP files for syntax errors.",
        "refactor": "Apply code refactoring.",
        "refactor-check": "Check code refactoring rules.",
        "reformat": "Fix coding style issues.",
        "test": "Run all tests."
    }
}
